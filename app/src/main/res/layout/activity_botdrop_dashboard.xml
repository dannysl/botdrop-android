<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botdrop_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Update Banner (hidden by default) -->
        <LinearLayout
            android:id="@+id/update_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/update_banner_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/botdrop_update_available"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/botdrop_accent"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_update_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/botdrop_download"
                    android:textAllCaps="false"
                    android:background="@drawable/botdrop_button_bg"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_update_dismiss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/botdrop_dismiss"
                    android:textAllCaps="false"
                    android:background="@drawable/botdrop_button_outline_bg"
                    android:textColor="@color/botdrop_accent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btn_back_to_agent_selection"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_chevron"
                android:contentDescription="@string/botdrop_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:tint="@color/botdrop_accent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/botdrop_logo"
                    android:contentDescription="@string/application_name"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/application_name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_on_background" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Gateway Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <!-- Status indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_stopped" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/botdrop_gateway_stopped"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/botdrop_on_background" />
                </LinearLayout>

                <!-- Uptime -->
                <TextView
                    android:id="@+id/uptime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="—"
                    android:textSize="14sp"
                    android:textColor="@color/botdrop_secondary_text" />

                <!-- OpenClaw version + check button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/openclaw_version_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/botdrop_secondary_text" />

                    <TextView
                        android:id="@+id/btn_check_openclaw_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/botdrop_check_openclaw_updates"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/botdrop_button_bg"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:minHeight="32dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/btn_view_openclaw_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/botdrop_view_log"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/botdrop_button_bg"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btn_open_openclaw_web_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/botdrop_open_web_ui"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/botdrop_button_bg"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

        </LinearLayout>

        <!-- Startup Notice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/botdrop_first_interaction_tip"
                android:textSize="13sp"
                android:textColor="@color/botdrop_secondary_text" />
        </LinearLayout>

        <!-- Gateway Error Banner (hidden by default) -->
        <LinearLayout
            android:id="@+id/gateway_error_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/botdrop_gateway_issue_detected"
                android:textColor="@color/status_disconnected"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gateway_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/botdrop_secondary_text"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Channel Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/botdrop_channels"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/telegram_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botdrop_card_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/botdrop_channel_telegram"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_on_background" />

                    <TextView
                        android:id="@+id/telegram_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/botdrop_connected"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="›"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discord_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botdrop_card_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/botdrop_channel_discord"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_on_background" />

                    <TextView
                        android:id="@+id/discord_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○ —"
                        android:textSize="14sp"
                        android:textColor="@color/botdrop_secondary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="›"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feishu_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/botdrop_card_bg"
                    android:paddingVertical="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/botdrop_channel_feishu"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_on_background" />

                    <TextView
                        android:id="@+id/feishu_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○ —"
                        android:textSize="14sp"
                        android:textColor="@color/botdrop_secondary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="›"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_secondary_text" />
                </LinearLayout>
        </LinearLayout>

        <!-- Current Model Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botdrop_current_model"
            android:textSize="14sp"
            android:textColor="@color/botdrop_secondary_text"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/botdrop_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/current_model_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="16sp"
                    android:textColor="@color/botdrop_primary_text"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_change_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/botdrop_change_model"
                    android:background="@drawable/botdrop_button_outline_bg"
                    android:textColor="@color/botdrop_accent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/botdrop_start"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_bg"
                android:textColor="#1A1A1A"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/botdrop_stop"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_outline_bg"
                android:textColor="@color/botdrop_accent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/botdrop_restart"
            android:textAllCaps="false"
            android:background="@drawable/botdrop_button_bg"
            android:textColor="#1A1A1A"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_backup_openclaw_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/botdrop_backup"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_outline_bg"
                android:textColor="@color/botdrop_accent" />

            <Button
                android:id="@+id/btn_restore_openclaw_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/botdrop_restore"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_outline_bg"
                android:textColor="@color/botdrop_accent" />
        </LinearLayout>

        <!-- Guidance Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/botdrop_tip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/botdrop_chat_tip"
                    android:textSize="14sp"
                    android:textColor="@color/botdrop_on_background" />
        </LinearLayout>

        <!-- SSH Info Card -->
        <LinearLayout
            android:id="@+id/ssh_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/botdrop_ssh_access"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ssh_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/botdrop_on_background" />
        </LinearLayout>

        <!-- Terminal Button -->
        <Button
            android:id="@+id/btn_open_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botdrop_open_terminal"
            android:textAllCaps="false"
            android:background="@drawable/botdrop_button_outline_bg"
            android:textColor="@color/botdrop_accent" />
    </LinearLayout>
</ScrollView>
