<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/botdrop_dialog_card_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/change_model_selected_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/botdrop_on_background"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/change_model_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/botdrop_secondary_text"
            android:lineSpacingExtra="2sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/change_model_api_key_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="46dp"
            android:hint="Enter API key"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textColor="@color/botdrop_on_background"
            android:textColorHint="@color/botdrop_secondary_text" />

        <TextView
            android:id="@+id/change_model_cached_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved keys"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/botdrop_secondary_text"
            android:layout_marginBottom="6dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/change_model_cached_keys_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
